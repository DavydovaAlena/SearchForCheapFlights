<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="@color/basic_gray3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:src="@drawable/arrow_blue_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/blue"
        android:contentDescription="arrow" />

    <TextView
        android:id="@+id/city_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/sf_pro_display_semibold"
        android:textColor="@color/basic_white"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/city_to"
        app:layout_constraintStart_toEndOf="@id/arrow"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Москва-Сочи " />

    <TextView

        android:id="@+id/city_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textColor="@color/basic_gray6"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/city_from"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/arrow"
        tools:text="Москва-Сочи " />

</androidx.constraintlayout.widget.ConstraintLayout>