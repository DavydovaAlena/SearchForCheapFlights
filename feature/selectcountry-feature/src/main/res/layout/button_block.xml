<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/show_all_button"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_semibold"
        android:textSize="16sp"
        android:background="@drawable/shape_all_ticket_button"
        android:text="Посмотреть все билеты"
        android:textColor="@color/basic_white"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp"/>


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/basic_gray3"
        app:contentPadding="16dp"
        android:textAllCaps="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/notification_field_icon"/>

            <TextView
                android:layout_gravity="center"
                android:layout_weight="8"
                android:layout_marginStart="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textSize="16sp"
                android:textColor="@color/basic_white"
                android:text="Подписка на цену"/>


            <Switch
                android:id="@+id/switch_element"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:thumbTint="@color/basic_white"
                android:trackTint="@color/basic_gray6"
                tools:ignore="UseSwitchCompatOrMaterialXml" />



        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>